<Page
    x:Class="Turakas.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Turakas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:TurakasLibrary="using:TurakasLibrary"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.Resources>
            <Storyboard x:Name="downAnimation">
                <PointerDownThemeAnimation TargetName="LayoutRoot"/>
            </Storyboard>
            <Storyboard x:Name="upAnimation">
                <PointerUpThemeAnimation TargetName="LayoutRoot"/>
            </Storyboard>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <Button x:ConnectionId='1' Name ="btnDisplay" Content="Deal" HorizontalAlignment="Left" Margin="113,53,0,0" VerticalAlignment="Top"                          Grid.Row="0" />

        <Grid
                x:Name="gridPlayer2"
                Width="auto"
                Height="auto"
                Background="HotPink"
                Grid.Column="0"
                Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                        Width="1*" />
                <ColumnDefinition
                        Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBlock Name="player2_name"   Grid.Column="0" HorizontalAlignment="Left" Margin="71,65,0,0" TextWrapping="Wrap" Text="player 2" VerticalAlignment="Top" FontSize="18"/>
            </Grid>
                <Grid
                x:Name="gridPlayer3"
                Width="auto"
                Height="auto"
                Background="Tomato"
                Grid.Column="0"
                Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="1*" />
                    <ColumnDefinition
                        Width="1*" />
                </Grid.ColumnDefinitions>
            <TextBlock Name="player3_name"   Grid.Column="0" HorizontalAlignment="Left" Margin="71,65,0,0" TextWrapping="Wrap" Text="player 3" VerticalAlignment="Top" FontSize="18"/>
        </Grid>


        <Grid
                x:Name="GameAreaGrid"
                Width="auto"
                Height="auto"
                Background="YellowGreen"
                Grid.Column="1"
                Grid.Row="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                        Width="1*" />
                <ColumnDefinition
                        Width="1*" />
                <ColumnDefinition
                        Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackPanel
                    x:Name="stkpMove1"
                    Background="White"
                    Grid.Column="0"
                    Grid.Row="0" />
            <StackPanel
                    x:Name="stkpMove2"
                    Background="Blue"
                    Grid.Column="1"
                    Grid.Row="0" />
            <StackPanel
                    x:Name="stkpMove3"
                    Background="Red"
                    Grid.Column="2"
                    Grid.Row="0" />
            <StackPanel
                    x:Name="stkpMove4"
                    Background="Red"
                    Grid.Column="0"
                    Grid.Row="1" />
            <StackPanel
                    x:Name="stkpMove5"
                    Background="GhostWhite"
                    Grid.Column="1"
                    Grid.Row="1" />
            <StackPanel
                    x:Name="stkpMove6"
                    Background="Gold"
                    Grid.Column="2"
                    Grid.Row="1" />
        </Grid>

        <StackPanel Name="stkpPl1Hand" HorizontalAlignment="Center"  Margin="3,5,1,0"  VerticalAlignment="Stretch" Grid.Row="3"  Grid.RowSpan="1" Grid.ColumnSpan="3" >
            <GridView x:Name="gwPl1Hand"  ManipulationMode="All"  Grid.Row="3" BorderThickness="0,0,2,0" VerticalAlignment="Bottom" VerticalContentAlignment="Stretch">
                <GridView.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FFE8D7D7" Offset="1"/>
                    </LinearGradientBrush>
                </GridView.Background>
                <GridView.ItemsPanel>

                    <ItemsPanelTemplate >
                        <WrapGrid Name="wrGrid"  Orientation="Horizontal"/>
                        
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>

        </StackPanel>
    </Grid>
</Page>

